<div>
  <h2 <%= jhiPrefix %>Translate="entityAudit.home.title">Entity Audit</h2>

  <jhi-alert></jhi-alert>

  <div>
    <h4 <%= jhiPrefix %>Translate="entityAudit.home.filter">Filter</h4>

    <form name="auditEventForm" class="form-inline" #auditEventForm="ngForm">
      <div class="d-flex">
        <label class="form-control-label mr-sm-2 col-2" for="entityName" <%= jhiPrefix %>Translate="entityAudit.home.entityOrTable">
          Entity/Table
        </label>
        <select
          class="form-control mb-2 mr-sm-2 mb-sm-0"
          id="entityName"
          name="entityName"
          required
          [ngModel]="selectedEntity()"
          (ngModelChange)="selectedEntity.set($event)"
          #entityName="ngModel"
        >
          <option value="{{ null }}" selected>Select</option>
          @for (entityOption of entities(); track $index) {
            <option [value]="entityOption">{{ entityOption }}</option>
          }
        </select>

        <label class="form-control-label mr-sm-2 col-2" for="limit" <%= jhiPrefix %>Translate="entityAudit.home.limitTo"> Limit to </label>
        <select
          class="form-control mb-2 mr-sm-2 mb-sm-0"
          id="limit"
          name="limit"
          required
          [ngModel]="selectedLimit()"
          (ngModelChange)="selectedLimit.set($event)"
        >
          @for (limitOption of limits; track $index) {
            <option [value]="limitOption">{{ limitOption }}</option>
          }
        </select>

        <button class="btn btn-primary float-right col-2" (click)="loadChanges()" [disabled]="!auditEventForm.form.valid">
          <fa-icon icon="sync"></fa-icon>
          <span <%= jhiPrefix %>Translate="entityAudit.home.loadChangeList">Load Change List</span>
        </button>
      </div>
    </form>
  </div>

  <div [hidden]="loading()">
    @if (audits().length > 0) {
      <div class="table-responsive mt-2">
        <p <%= jhiPrefix %>Translate="entityAudit.result.showInfo" [translateValues]="{ limit: selectedLimit(), entity: selectedEntity() }">
          Last <strong>{{ selectedLimit() }}</strong> Changes for <strong>{{ selectedEntity() }}</strong>
        </p>

        <form class="form-inline mb-2">
          <div class="form-group">
            <label for="searchFieldEntityId" <%= jhiPrefix %>Translate="entityAudit.result.searchFieldLabel"> Filter: </label>
            <input
              type="text"
              class="form-control ml-2"
              id="searchFieldEntityId"
              name="searchFieldEntityId"
              placeholder="{{ 'entityAudit.result.entityIdFilter' | translate }}"
              [ngModel]="filterEntityId()"
              (ngModelChange)="filterEntityId.set($event)"
            />
          </div>
        </form>

        <table class="table table-condensed table-striped table-bordered">
          <thead>
            <tr>
              <th (click)="orderBy('entityId')" <%= jhiPrefix %>Translate="entityAudit.result.tableHeader.entityId">Entity Id</th>
              <th (click)="orderBy('action')" <%= jhiPrefix %>Translate="entityAudit.result.tableHeader.action">Action</th>
              <th (click)="orderBy('commitVersion')" <%= jhiPrefix %>Translate="entityAudit.result.tableHeader.version">Version</th>
              <th <%= jhiPrefix %>Translate="entityAudit.result.tableHeader.value">Value</th>
              <th (click)="orderBy('modifiedDate')" <%= jhiPrefix %>Translate="entityAudit.result.tableHeader.modifiedDate">Modified Date</th>
              <th (click)="orderBy('modifiedBy')" <%= jhiPrefix %>Translate="entityAudit.result.tableHeader.modifiedBy">Modified By</th>
              <th><fa-icon icon="eye"></fa-icon></th>
            </tr>
          </thead>
          <tbody>
            @for (audit of audits(); track audit.id) {
              <tr>
                <td>{{ audit.entityId }}</td>
                <td>{{ audit.action }}</td>
                <td>{{ audit.commitVersion }}</td>
                <td>
                  <pre class="code">{{ audit.entityValue | json }}</pre>
                </td>
                <td>{{ audit.modifiedDate | date: 'medium' }}</td>
                <td>{{ audit.modifiedBy }}</td>
                <td>
                  <button
                    type="button"
                    class="btn btn-info btn-xs"
                    ngbTooltip="__jhiTranslatePipe__('entityAudit.result.tableBody.viewDetails')"
                    (click)="openChange(audit)"
                  >
                    <fa-icon icon="eye"></fa-icon>
                  </button>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    } @else {
      <p <%= jhiPrefix %>Translate="entityAudit.result.noDataFound" class="mt-2">No Data found for the filters</p>
    }
  </div>
</div>
